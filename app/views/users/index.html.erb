<% content_for :left_column do %>



<h2>All Users</h2>
<table class="table table-striped">
    <thead>
        <tr>

            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Favorite Language</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.favorite_language %></td>
        </tr>
        <% end %>

    </tbody>
</table>
<% end %>



<% content_for :right_column do %>

<h2>New User</h2>
<form action="/users" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
    <div class="form-group">
        <label for="first_name">First Name</label>
        <input type="text" class="form-control" id="first_name" name="user[first_name]">
    </div>
    <div class="form-group">
        <label for="last_name">Last Name</label>
        <input type="text" class="form-control" id="last_name" name="user[last_name]">
    </div>
    <div class="form-group">
        <label for="favorite_language">Favorite Language</label>
        <input type="text" class="form-control" id="favorite_language" name="user[favorite_language]">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


<a href="/posts" class="btn btn-info mt-3">Post</a>
<% end %>